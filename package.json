{
   "private":true,
   "scripts":{
      "postinstall":"install-app-deps",
      "start":"npm install && npm run compile && electron ./app",
      "compile":"rimraf app/out",
      "pack":"npm run compile && build --dir",
      "dist":"npm run compile && build"
   },
   "build":{
      "appId":"uk.meadowcottage.devRant",
      "app-category-type":"public.app-category.social",
      "productName":"devRant",
      "dmg":{
         "background":"build/background.png",
         "contents":[
            {
               "x":410,
               "y":150,
               "type":"link",
               "path":"/Applications"
            },
            {
               "x":130,
               "y":150,
               "type":"file"
            }
         ]
      },
      "win":{
         "remoteReleases":"https://github.com/meadowcottage/devrant",
         "loadingGif":"build/install-spinner.gif",
         "msi":true
      }
   },
   "devDependencies":{
      "devtron":"^1.2.1",
      "electron-builder":"^5.14.1",
      "electron-prebuilt":"1.2.7",
      "rimraf":"^2.5.3"
   },
   "dependencies":{
      "electron-gh-releases":"^2.0.4"
   }
}
